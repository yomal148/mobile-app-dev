<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocationActivity">

    <TextView
        android:id="@+id/location_text"
        android:layout_width="184dp"
        android:layout_height="183dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:text=""
        app:layout_constraintEnd_toStartOf="@+id/distance_travelled"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="65dp" />

    <TextView
        android:id="@+id/distance_travelled"
        android:layout_width="181dp"
        android:layout_height="174dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/location_text"
        tools:layout_editor_absoluteY="65dp" />

    <Button
        android:id="@+id/btn_reset_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/clear"
        app:layout_constraintTop_toBottomOf="@id/distance_travelled"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/location_text"/>

</androidx.constraintlayout.widget.ConstraintLayout>